mixin navigationOffCanvas(menu)
    .Header-MenuContainer
        header.Header
            section.Header-container
                h1.Header-logo: a.Header-logoLink(href="/") Grand Hotel
            aside.Menu-container
                .Menu-toggle.icon-menu#navId-toggle Menu
                nav.Menu-nav#navId
                    ul.Menu-listItem#menuId
                        each item in menu
                            li.Menu-item
                                a.Menu-link(href="#")= item[0]
